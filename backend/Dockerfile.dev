# ---------- Dockerfile para desarrollo ----------
    FROM node:20

    WORKDIR /app
    
    # Copiar y construir dependencias
    COPY package*.json ./
    RUN npm install
    
    # Copiar el resto del c√≥digo fuente
    COPY . .
    
    # Exponer el puerto
    EXPOSE 3000
    
    CMD ["npm", "run", "dev"]

    