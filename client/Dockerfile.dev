# ---------- Dockerfile para desarrollo ----------
    FROM node:20

    WORKDIR /app
    
    # Copiar package.json y package-lock.json
    COPY package*.json ./
    
    # Instalar dependencias
    RUN npm install
    
    # Copiar el resto del c√≥digo
    COPY . .
    
    # Exponer el puerto 5173 (Vite)
    EXPOSE 5173
    
    # Ejecutar Vite en modo desarrollo
    CMD ["npm", "run", "dev"]
    